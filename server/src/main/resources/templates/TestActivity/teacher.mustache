<h3>Configuración de la actividad</h3>
<hr>

<div class="form-check" style="padding: 20px;">
    {{#retryAllowed}}
        <input class="form-check-input" type="checkbox" checked id="retryAllowed">
    {{/retryAllowed}}

    {{^retryAllowed}}
        <input class="form-check-input" type="checkbox" id="retryAllowed">
    {{/retryAllowed}}

    <input id="secretKey" type="hidden" name="secretKey" value="{{secretKey}}" >

    <label class="form-check-label" for="defaultCheck1">
        Permitir reintentos
    </label>
</div>

<hr>
<button class="btn btn-success" onclick="saveConfig()">
    Guardar configuración
</button>
<script>
    function saveConfig() {
        var allowRetry = $('#retryAllowed').is(':checked');
        var secretKey = $('#secretKey').val();
        console.log(allowRetry);
        jQuery.post("/test/allowRetry", {allowRetry: allowRetry, secretKey: secretKey});
    }
</script>