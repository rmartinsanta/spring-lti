<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://bootswatch.com/4/flatly/bootstrap.min.css">

    <title>TestActivity index</title>
</head>
<body>


<div class="container-fluid" style="padding: 30px;">
    <h1>Bienvenido a la actividad de prueba!</h1>

    {{#c.isTeacher}}
        {{>TestActivity/teacher}}
    {{/c.isTeacher}}

    {{^c.isTeacher}}
        {{>TestActivity/student}}
    {{/c.isTeacher}}
</div>


{{#isdebug}}
    <hr>
    <div style="margin: 30px;">
        <h3>Herramientas de depuración</h3>
        <a class="btn btn-primary" data-toggle="collapse" href="#contextData" role="button" aria-expanded="false" aria-controls="collapseExample">
            Mostrar/Ocultar datos de depuración
        </a>
        <a class="btn btn-primary" data-toggle="collapse" href="#launchRequestsData" role="button" aria-expanded="false" aria-controls="collapseExample">
        Mostrar/Ocultar solicitudes de lanzamiento
        </a>
        <div class="collapse" id="contextData">
            <div class="card card-body">
                <table class="table table-stripped">
                    <thead>
                    <tr>
                        <th scope="col">Propiedad</th>
                        <th scope="col">Valor</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#debug}}
                    <tr>
                        <th scope="row">{{getKey}}</th>
                        <td>{{getValue}}</td>
                    </tr>
                    {{/debug}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="collapse" id="launchRequestsData">
        <div class="card card-body">
            <div class="accordion" id="accordionExample">
                {{#requests}}
                <div class="card">
                    <div class="card-header" id="headingOne">
                        <h5 class="mb-0">
                            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse-{{getId}}" aria-expanded="true" aria-controls="collapse-{{getId}}">
                                Petición #{{getId}}
                            </button>
                        </h5>
                    </div>

                    <div id="collapse-{{getId}}" class="collapse show" aria-labelledby="heading-{{getId}}" data-parent="#accordionExample">
                        <div class="card-body">
                            <table class="table table-stripped">
                                <thead>
                                <tr>
                                    <th scope="col">Propiedad</th>
                                    <th scope="col">Valor</th>
                                </tr>
                                </thead>
                                <tbody>
                                {{#toArray}}
                                    <tr>
                                        <th scope="row">{{getKey}}</th>
                                        <td>{{getValue}}</td>
                                    </tr>
                                {{/toArray}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                {{/requests}}

            </div>
        </div>
    </div>
{{/isdebug}}

<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.3.1.min.js" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>